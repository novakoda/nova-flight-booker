<p id="notice"><%= notice %></p>

<h1>Flights</h1>

<table>
  <thead>
    <tr>
      <th>From airport</th>
      <th>To airport</th>
      <th>Depart time</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <h3>Search By Departing Airport: </h3>
    <%= form_tag flights_path, method: :get do %>
      <%= collection_select(:flight, :from_airport_id, Airport.all, :id, :code, prompt: true) %>
      <%= collection_select(:flight, :to_airport_id, Airport.all, :id, :code, prompt: true) %>
      <%= date_select(:flight, :depart_time) %>
      <!-- select_tag "from_airport_id", options_from_collection_for_select(Airport.order(:code), :id, :code) -->
      <%= submit_tag "Search" %>
    <% end %>
    <h3>All Flights</h3>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.from_airport.code %></td>
        <td><%= flight.to_airport.code %></td>
        <td><%= flight.depart_time %></td>
        <td><%= Time.at(flight.duration).utc.strftime("%H h %M m") %></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

