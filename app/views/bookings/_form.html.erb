<%= form_for @booking do |f| %>
  <%= hidden_field_tag "flight", @booked_flight.id %>
  <%= hidden_field_tag "passenger_num", @passenger_num %>

  <% @passenger_num.to_i.times do |i| %>
    <%= fields_for :passengers, @booking.passenger do |passenger_fields| %>
      <h3>Passenger <%= i+1 %></h3>

      <div class="field">
        <%= passenger_fields.label :"Name" %>
        <%= passenger_fields.text_field :"name#{i+1}", required: true %>
      </div>

      <div class="field">
        <%= passenger_fields.label :"Email" %>
        <%= passenger_fields.email_field :"email#{i+1}", required: true %>
      </div>
    <% end %>
  <% end %>

  <div class="actions">
    <%= f.submit "Book Flight" %>
  </div>

<% end %>
