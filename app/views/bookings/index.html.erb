<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Passenger</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.flight.origin.code %> -> <%= booking.flight.destination.code %>, <%= booking.flight.depart_time %></td>
        <td><%= booking.passenger.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
